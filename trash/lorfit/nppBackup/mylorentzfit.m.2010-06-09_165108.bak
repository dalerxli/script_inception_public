function [sigma,mu,A]=mylorentzfit(x,yOrig)
figure;
plot(x,yOrig,'ob');
hold on;

%% define start point
y0=2.5;
A=5;
w=4;
x0=7;
vStart=[y0,A,w,x0];
fprintf('Start:  y0=%f  A=%f  w=%f  x0=%f\n',vStart(1),vStart(2),vStart(3),vStart(4)); 
yStart=fun(vStart,x);
plot(x,yStart,'-r');

%% using nlinfit
vEnd=nlinfit(x,yOrig,@fun,vStart);
yEnd=fun(vEnd,x);
fprintf('End:  y0=%f  A=%f  w=%f  x0=%f\n',vEnd(1),vEnd(2),vEnd(3),vEnd(4)); 
plot(x,yEnd,'-g');
legend('Orig','Start','End');
set(gca,'Color',[0.7,0.7,0.7]);
set(gcf,'Color',[1,1,1]);
