function v=subGridMultiLayer(indexVector,thicknessVector,lambda)
%Layer Settings

if (nargin==0)
    indexVector=[1.76  2.1385 2.3535 1];
    thicknessVector=[1,0.5,1,1];
    lambda=0.804;
end

totalHeight=sum(thicknessVector);

nLayers=length(thicknessVector);

dV=lambda/16./indexVector; % Round to the nearest 1e-4.
nCellsV=ceil(thicknessVector./dV);
dV=thicknessVector./nCellsV;

v=[];
for m=1:nLayers
    v=[v,dV(m)*ones(1,nCellsV(m))];
end
